<domain type='lxc'>
  <name>CLONE_NAME</name>
  <memory unit='MiB'>CLONE_RAM</memory>
  <currentMemory unit='MiB'>CLONE_RAM</currentMemory>
  <memtune>
    <hard_limit unit='MiB'>CLONE_RAM</hard_limit>
    <swap_hard_limit unit='MiB'>CLONE_RAM</swap_hard_limit>
  </memtune>
  <vcpu placement='static' cpuset='0'>CLONE_CPUS</vcpu>
  <os>
    <type arch='x86_64'>exe</type>
    <init>/sbin/init</init>
  </os>
  <idmap>
    <uid start='0' target='CLONE_SHIFT' count='5000'/>
    <gid start='0' target='CLONE_SHIFT' count='5000'/>
  </idmap>
  <clock offset='utc'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <devices>
    <emulator>/usr/libexec/libvirt_lxc</emulator>
    <filesystem type='mount' accessmode='passthrough'>
      <source dir='CLONE_PATH'/>
      <target dir='/'/>
    </filesystem>
    <filesystem type='mount' accessmode='passthrough'>
      <source dir='/usr/portage'/>
      <target dir='/var/portage/tree'/>
      <readonly/>
    </filesystem>
    <filesystem type='mount' accessmode='passthrough'>
      <source dir='/usr/portage/distfiles'/>
      <target dir='/var/portage/distfiles_ro'/>
      <readonly/>
    </filesystem>
    <filesystem type='ram' accessmode='passthrough'>
      <source usage='131072' units='KiB'/>
      <target dir='/run'/>
    </filesystem>
    <filesystem type='ram' accessmode='passthrough'>
      <source usage='524288' units='KiB'/>
      <target dir='/tmp'/>
    </filesystem>
    <filesystem type='ram' accessmode='passthrough'>
      <source usage='262144' units='KiB'/>
      <target dir='/dev/shm'/>
    </filesystem>
    <interface type='network'>
      <ip address="10.0.1.200" netmask="255.255.255.0"/>
      <source network='isolated'/>
    </interface>
    <console type='pty'>
      <target type='lxc' port='0'/>
    </console>
  </devices>
</domain>
